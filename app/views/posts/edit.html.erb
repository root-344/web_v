<div class="new-wrapper">
    <h1 class="form-heading">編集する</h1>
    <%= form_tag("/posts/#{@post.id}/update/") do %>
      <div class="form">
        <div class="form-body">
          <textarea name="content" class="content-area"><%= @post.content %></textarea>
          <input type="submit" value="投稿" class="p-btn">
        </div>
      </div>
    <% end %>
</div>
