<%= render "shared/index" %>

<div class="new-wrapper">
    <h1 class="form-heading">投稿する</h1>
    <%= form_with url: "/posts/create", local: true do |form| %>
      <div class="form">
        <div class="form-body">
          <% @post.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <%= form.text_field :team_name, class: "t-n", value: "#{@post.team_name}" %>
          <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class: "genre"}) %>
          <%= form.datetime_field :date, {include_blank: true} %>
          <%= form.text_area :content, class: "content-area", value: "#{@post.content}" %>
          <%= form.submit "SEND", value: "投稿", class: "p-btn" %>
        </div>
      </div>
    <% end %>

</div>
