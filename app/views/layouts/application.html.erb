<!DOCTYPE html>
<html>
  <head>
    <title>WebV</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header-bar">
        <div class="header-left">
          <h1 id="logo">###</h1>
        </div>
        <div class="header-right">
          <div class="login" id="login-btn">ログイン</div>
          <div class="signup" id="signup-btn">新規登録</div>
          <%= link_to "投稿一覧", "/posts/index", class: "post-stock" %>
          <%= link_to "新規投稿", "/posts/new/", class: "new-post" %>
        </div>
    </header>
    <div class="main-wrapper">
      <div class="side">登録名</div>
      <%= yield %>
      <script src="script.js"></script>
    </div>
    <footer>
      <div class="footer-bar">フッター</div>
    </footer>
  </body>
</html>
